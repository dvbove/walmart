@model IEnumerable<Walmart.Prova.Model.Estado>
@{
    ViewBag.Title = "Estados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Estados</h2>
<p>
    @Html.ActionLink("Novo", "Novo")
</p>
<table id="ListaTable">
    <tr>
        <th>
            Pais
        </th>
        <th>
            Nome
        </th>
        <th>
            Sigla
        </th>
        <th>
            Regiao
        </th>
        <th>
        </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4">
                Nenhum registro encontrado
            </td>
        </tr>  
    }
    else
    {
        foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sigla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Regiao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.Codigo }) |
                @Html.ActionLink("Excluir", "Excluir", "Estado", new { id = item.Codigo }, new { id = "delete" })
            </td>
        </tr>
        }
    }
</table>
<script type="text/javascript">
    $(function () {
        $('#delete').click(function () {
            if (confirm('Excluír o registro selecionado?')) {
                $.post(this.href, {}, function (result) {
                    alert("Registro excluído.");
                });

                $(this).parent().parent().remove();
            }
            return false;
        });
    });
</script>
