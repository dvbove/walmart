@model Walmart.Prova.Model.Estado
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Novo</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Atualizar", "Estado", FormMethod.Post, new { Codigo = "Estado" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Estado</legend>
        @Html.HiddenFor(model => model.Codigo)
        <div class="editor-label">
            @Html.LabelFor(model => model.Pais)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Pais, new { maxlength = "50" })
            @Html.ValidationMessageFor(model => model.Pais)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Nome, new { maxlength = "50" })
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Sigla)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Sigla, new { maxlength = "2" })
            @Html.ValidationMessageFor(model => model.Sigla)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Regiao)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Regiao, new { maxlength = "20" })
            @Html.ValidationMessageFor(model => model.Regiao)
        </div>
        <p>
            <input type="submit" value="Gravar" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Voltar", "Lista")
</div>
