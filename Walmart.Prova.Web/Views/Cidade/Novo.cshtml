@model Walmart.Prova.Model.Cidade
@{
    ViewBag.Title = "Cidade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Cidade</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Gravar", "Cidade", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Cidade</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.CodigoEstado)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.CodigoEstado, new SelectList(Model.Estados, "Codigo", "Nome"))
            @Html.ValidationMessageFor(model => model.CodigoEstado)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Nome, new { maxlength = "50" })
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Capital)
        </div>
        <div class="editor-field">
            @Html.CheckBoxFor(model => model.Capital)
            @Html.ValidationMessageFor(model => model.Capital)
        </div>
        <p>
            <input type="submit" value="Gravar" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Voltar", "Lista")
</div>
